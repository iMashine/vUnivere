<Page
    x:Class="wa.vuTeachersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="mainGrid" Margin="0,0,0,-0.111">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="headerPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Orientation="Horizontal">
            <Image x:Name="image" Height="40" Width="35" Source="Assets/menuIcon.png" Margin="5,0,5,5"/>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Преподаватели" FontSize="24" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="contentPanel" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0">
            <TextBox x:Name="textBox" Margin="5" TextWrapping="Wrap" Text="Га" VerticalAlignment="Stretch" Background="#FF000000">
                <TextBox.Foreground>
                    <SolidColorBrush Color="{ThemeResource PhoneBaseLowSolidColor}"/>
                </TextBox.Foreground>
            </TextBox>
            <StackPanel x:Name="newsItem_Copy" Margin="5" Background="#501F1F1F">
                <StackPanel x:Name="newsAuthor1" Orientation="Horizontal" Margin="5,5,5,0">
                    <Image x:Name="icon1" Source="Assets/profileIcon.png" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="Галышков Денис Андреевич" FontSize="24" Margin="5,5,0,0"/>
                </StackPanel>
                <StackPanel x:Name="newsContent1" Margin="5">
                    <TextBlock x:Name="textBlock5" TextWrapping="Wrap" Text="АСФ, Старший преподаватель" FontSize="18" Margin="5">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{ThemeResource PhoneBaseLowColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="newsItem_Copy1" Margin="5" Background="#501F1F1F">
                <StackPanel x:Name="newsAuthor2" Orientation="Horizontal" Margin="5,5,5,0">
                    <Image x:Name="icon2" Source="Assets/profileIcon.png" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Гаврилов Павел Антонович" FontSize="24" Margin="5,5,0,0"/>
                </StackPanel>
                <StackPanel x:Name="newsContent2" Margin="5">
                    <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="ФГ, к.т.н." FontSize="18" Margin="5">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{ThemeResource PhoneBaseLowColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="newsItem_Copy2" Margin="5" Background="#501F1F1F">
                <StackPanel x:Name="newsAuthor3" Orientation="Horizontal" Margin="5,5,5,0">
                    <Image x:Name="icon3" Source="Assets/profileIcon.png" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock3" TextWrapping="Wrap" Text="Гальцева Юлия Степановна" FontSize="24" Margin="5,5,0,0"/>
                </StackPanel>
                <StackPanel x:Name="newsContent3" Margin="5">
                    <TextBlock x:Name="textBlock6" TextWrapping="Wrap" Text="АФС, Ассистент" FontSize="18" Margin="5">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{ThemeResource PhoneBaseLowColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

